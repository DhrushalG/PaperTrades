<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PaperTrades</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>

<body class="bg-secondary">
    <header class="">
        <nav class="bg-dark navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container ">
                <div class="d-flex">
                    <a class="navbar-brand text-warning" asp-area="" asp-controller="Home" asp-action="Dashboard">PaperTrades</a>
                    <a class="nav-link text-info" asp-area="" asp-controller="Home" asp-action="AllCryptos">Cryptocurrencies</a>
                </div>
                    @{
                        if (ViewBag.loggedIn == false)
                        {} else {
                            <div class="d-flex align-items-end">
                                <a class="nav-link text-white" asp-controller="Home" asp-action="Settings"><img src="~/css/images/Settings.jpg" style="width: 40px; border-radius: 20px 20px;"></a>
                                <a class="nav-link text-white mx-3" asp-area="" asp-controller="Home" asp-action="Dashboard"><img src="~/css/images/Home.jpg" style="width: 40px; border-radius:20px 20px; "></a>
                                <a class="nav-link text-white mb-2 text-muted" asp-area="" asp-controller="Home" asp-action="Logout">Logout</a>
                            </div>
                        }
                    }
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-dark">
            &copy; 2022 - PaperTrades
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>
